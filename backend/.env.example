# Application Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000

# Firebase Configuration (Backend)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_DATABASE_URL=https://your-project-id-default-rtdb.firebaseio.com
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Firebase Service Account (for server-side authentication)
# You can either set this as a JSON string or set GOOGLE_APPLICATION_CREDENTIALS to point to your service account file
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id",...}

# Or use this approach:
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/serviceAccountKey.json

# Database Configuration (Optional - keeping for backward compatibility)
DATABASE_URL="postgresql://username:password@localhost:5432/tender_marketplace?schema=public"
REDIS_URL="redis://localhost:6379"

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this-too

# AI Services
OPENAI_API_KEY=sk-your-openai-api-key-here
GEMINI_API_KEY=your-google-gemini-api-key-here

# Government APIs
SAM_GOV_API_KEY=your-sam-gov-api-key
TED_API_KEY=your-ted-api-key
CONTRACTS_FINDER_API_KEY=your-contracts-finder-api-key

# Payment Processing
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Vector Database
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=tender-embeddings
PINECONE_ENVIRONMENT=us-west1-gcp

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@yourdomain.com

# File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_BUCKET_NAME=tender-marketplace-files
AWS_REGION=us-west-2

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
